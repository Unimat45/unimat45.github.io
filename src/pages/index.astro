---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Face from "../assets/face.png";

import { Github, Mail } from "lucide-react";
import Button from "../components/Button.astro";
import HomeCard from "../components/HomeCard.astro";
---

<Layout className="flex flex-col gap-8 justify-between my-8">
    <div class="flex flex-col-reverse sm:flex-row items-center justify-between gap-4">
        <section class="flex flex-col gap-4 animate-fade-in">
            <span
                class="text-xl text-transparent bg-clip-text bg-linear-to-r from-cyan-400 to-emerald-400 font-semibold"
                >Hello, I&apos;m</span
            >
            <div>
                <h1 class="text-8xl font-bold">Mathieu</h1>
                <div class="h-1 ml-1 w-1/4 bg-linear-to-r from-cyan-400 to-emerald-400 rounded-full"></div>
            </div>
            <span class="font-bold text-2xl">Full Stack Developer & Creative problem solver</span>
            <p class="mt-4 sm:max-w-2/3">
                I craft elegant digital experiences that blend cutting-edge technology with pixel-perfect design.
                Specializing in building scalable web applications that don't just work, they{" "}<span
                    class="text-transparent bg-clip-text bg-linear-to-r from-cyan-400 to-emerald-400 font-semibold"
                >
                    inspire
                </span>
            </p>
            <div class="flex gap-2">
                <a target="_blank" href="https://github.com/unimat45">
                    <Button className="w-fit">
                        <Github />
                    </Button>
                </a>
                <a href="mailto:mathieu.dery@bananastreaming.ca">
                    <Button className="w-fit">
                        <Mail />
                    </Button>
                </a>
            </div>
        </section>
        <section>
            <div class="order-1 md:order-2 flex justify-center animate-fade-in-delay">
                <div class="relative">
                    <div
                        class="absolute inset-0 bg-linear-to-r from-cyan-500 to-emerald-500 rounded-2xl blur-2xl opacity-30 animate-pulse"
                    >
                    </div>
                    <div
                        class="relative w-80 h-80 md:w-96 md:h-96 rounded-2xl overflow-hidden border-2 border-cyan-500/30 shadow-2xl shadow-cyan-500/20"
                    >
                        <Image src={Face} alt="Picture of me" class="w-full h-full object-cover" />
                    </div>
                    <div
                        class="absolute -bottom-4 -right-4 w-24 h-24 bg-linear-to-br from-cyan-500 to-emerald-500 rounded-lg opacity-20 animate-float"
                    >
                    </div>
                    <div
                        class="absolute -top-4 -left-4 w-32 h-32 bg-linear-to-br from-emerald-500 to-cyan-500 rounded-full opacity-10 animate-float-delay"
                    >
                    </div>
                </div>
            </div>
        </section>
    </div>
    <section class="grid sm:grid-cols-4 gap-8">
        <HomeCard stat="50+" label="Projects completed" />
        <HomeCard stat="15+" label="Happy clients" />
        <HomeCard stat="3+" label="Years of Experience" />
        <HomeCard stat="100%" label="Client Satisfaction" />
    </section>
</Layout>
