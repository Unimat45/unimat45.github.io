---
import { cn } from "../lib/utils";
import type { HTMLAttributes } from "astro/types";

// 1. Define your props interface extending built-in button attributes
interface Props extends HTMLAttributes<"button"> {
    highlighted?: boolean;
    className?: string;
}

// 2. Destructure the props from Astro.props
const { className, highlighted, ...props } = Astro.props;
---

<button
    class={cn(
        "px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 cursor-pointer w-full h-full",
        highlighted
            ? "bg-cyan-500/20 text-cyan-400 shadow-lg shadow-cyan-500/50"
            : "text-gray-300 hover:bg-gray-800 hover:text-white",
        className,
    )}
    {...props}
>
    <slot />
</button>
