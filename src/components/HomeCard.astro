---
interface Props {
    stat: number | string;
    label: string;
}

const { stat, label } = Astro.props;
---

<div
    class="rounded-xl border border-gray-700/50 bg-gray-800/30 p-6 text-center transition-all duration-300 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/20"
>
    <div
        class="bg-linear-to-r from-cyan-400 to-emerald-400 bg-clip-text text-3xl font-bold text-transparent md:text-4xl"
    >
        {stat}
    </div>
    <div class="mt-2 text-sm text-gray-400">{label}</div>
</div>
