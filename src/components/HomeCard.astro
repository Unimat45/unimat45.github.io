---
interface Props {
    stat: number | string;
    label: string;
}

const { stat, label } = Astro.props;
---

<div
    class="text-center p-6 rounded-xl bg-gray-800/30 border border-gray-700/50 hover:border-cyan-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-cyan-500/20"
>
    <div
        class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-cyan-400 to-emerald-400"
    >
        {stat}
    </div>
    <div class="text-sm text-gray-400 mt-2">{label}</div>
</div>
